{
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"test",
		"**/*.test.ts"
	],
	"compilerOptions": {
		"rootDir": "./src",
		"outDir": "./dist",
		"types": [
			"bun-types"
		],
		"lib": [
			"ES2020"
		],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"emitDeclarationOnly": true
	}
}